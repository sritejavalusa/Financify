@model Financify.Models.Savings
@{
    ViewData["Title"] = "Add Savings";
}

<h2> Add to Savings</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
else
{
    <form asp-controller="Savings" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Amount" class="control-label">Amount</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success mt-3">Save</button>
    </form>
}
<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Track"> View Your Progress</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}